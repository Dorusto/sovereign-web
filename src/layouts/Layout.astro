---
import '../styles/global.css';
const lang = Astro.currentLocale || 'ro';
const { title = 'Sovereign Life OS' } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-slate-950 text-slate-50 antialiased selection:bg-emerald-500/30">
		<nav class="fixed top-6 right-6 z-50 flex gap-4 bg-white/5 backdrop-blur-md border border-white/10 px-4 py-2 rounded-full text-sm">
			<a href="/" class={lang === 'ro' ? 'text-emerald-400 font-bold' : 'text-white/60 hover:text-white'}>RO</a>
			<a href="/en/" class={lang === 'en' ? 'text-emerald-400 font-bold' : 'text-white/60 hover:text-white'}>EN</a>
		</nav>

		<slot />
	</body>
</html>
